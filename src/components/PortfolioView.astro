---
// 新しいポートフォリオビューデザイン - Figmaデザイン準拠
import { worksData } from '../data/worksData.js';
import { profileData } from '../data/profileData.js';
import { Image } from 'astro:assets';

// 画像の取得関数（worksDataから直接取得）
// URL文字列が必要な場合（JavaScript内で使用）
const getWorkImage = (workName: string): string => {
  const image = worksData.images[workName as keyof typeof worksData.images];
  if (image && typeof image === 'object' && 'src' in image) {
    return image.src;
  }
  // フォールバック（文字列パスの場合）
  return typeof image === 'string' ? image : '';
};

// 画像オブジェクトを取得する関数（Imageコンポーネント用）
const getWorkImageObject = (workName: string): any => {
  return worksData.images[workName as keyof typeof worksData.images] || null;
};

// 画像オブジェクトからURL文字列を取得する関数
const getImageUrl = (image: any): string => {
  if (!image) return '';
  if (typeof image === 'object' && 'src' in image) {
    return image.src;
  }
  return typeof image === 'string' ? image : '';
};

// 作品名からHero背景画像を取得する関数（worksDataから取得、デフォルトはIttow）
const getHeroBackgroundImage = (workName: string): any => {
  const heroBackgroundImages = worksData.heroBackgroundImages || {};
  const defaultImage = heroBackgroundImages['Ittow' as keyof typeof heroBackgroundImages];
  return heroBackgroundImages[workName as keyof typeof heroBackgroundImages] || defaultImage;
};

// Hero背景画像のURLマッピング（クライアントサイド用）
const heroBackgroundImageUrls: Record<string, string> = {};
if (worksData.heroBackgroundImages) {
  Object.keys(worksData.heroBackgroundImages).forEach((workName) => {
    const image = (worksData.heroBackgroundImages as Record<string, any>)[workName];
    heroBackgroundImageUrls[workName] = getImageUrl(image);
  });
}

const workNames: string[] = worksData.names;

// Heroセクション用のフィーチャー作品（初期表示はIttow）
const initialWorkIndex = workNames.indexOf('Ittow');
const initialWorkName = workNames[initialWorkIndex >= 0 ? initialWorkIndex : 0];
const featuredWork = {
  name: initialWorkName,
  title: initialWorkName,
  description: worksData.descriptions[initialWorkName as keyof typeof worksData.descriptions] || '',
  backgroundImage: getHeroBackgroundImage(initialWorkName)
};
---

<div class="portfolio-view-new" id="portfolioView">

  <!-- Hero Section (Carousel) -->
  <section class="hero-section">
    <div class="hero-background">
      <Image 
        src={featuredWork.backgroundImage} 
        alt={`${featuredWork.name}の背景画像`}
        class="hero-bg-image"
        fetchpriority="high"
        loading="eager"
      />
    </div>
    
    <div class="hero-content">

      <div class="hero-card">
        <p class="hero-work-category" id="heroWorkCategory">
          {(Array.isArray(worksData.types[featuredWork.name as keyof typeof worksData.types]) 
            ? worksData.types[featuredWork.name as keyof typeof worksData.types].join(' / ')
            : worksData.types[featuredWork.name as keyof typeof worksData.types])}
