              personY = Math.min(90, personY + speed);
            } else {
              personY = Math.max(10, personY - speed);
            }
          }
          
          touchStartX = touchX;
          touchStartY = touchY;
          updatePosition();
        }
      });
      
      cityView.addEventListener('touchend', function() {
        isMoving = false;
      });
    }
  }
  
