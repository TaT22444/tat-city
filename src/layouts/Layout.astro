---
interface Props {
	title?: string;
}

const { title = 'TaT City' } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<slot name="head" />
	</head>
	<body>
		<header style="position: fixed; top: 0; left: 0; width: 100%; z-index: 100; display: none;">
			<div class="header_inner">
				<h1 class="header_title">tatsuya city</h1>
			</div>
		</header>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
		font-family: sans-serif;
		background-color: #f0f0f0;
		overflow: hidden;
		color: #333;
	}
	
	/* 全体的なスクロールを防止 */
	html {
		overflow: hidden;
	}

	.
</style>
