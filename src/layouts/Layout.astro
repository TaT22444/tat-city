---
import PortfolioHeader from '../components/PortfolioHeader.astro';
import { worksData } from '../data/worksData.js';

interface Props {
	title?: string;
	// SEO関連のprops
	description?: string;
	ogImage?: string;
	ogType?: string;
	canonical?: boolean;
	favicon?: string; // 動的ファビコン用
	// Header関連のprops
	showNavigation?: boolean;
	navigationLinks?: Array<{ href: string; label: string }>;
	viewToggleLink?: string;
	viewToggleActiveIcon?: 'grid' | '3d';
	showMobileViewToggle?: boolean;
	mobileViewToggleLink?: string;
	mobileViewToggleActiveIcon?: 'grid' | '3d';
	showMobilePortfolioList?: boolean;
	portfolioListItems?: Array<{ name: string; href?: string; dataAttribute?: string }>;
}

const { 
	title = 'Works City | TaT Archive / 2025 ~ 2026',
	description,
	ogImage,
	ogType = 'website',
	canonical = true,
	favicon,
	showNavigation = true,
	navigationLinks = [
		{ href: '#about', label: 'about' },
		{ href: '#works', label: 'works' },
		{ href: '#contact', label: 'contact' }
	],
	viewToggleLink = '/',
	viewToggleActiveIcon = 'grid',
	showMobileViewToggle = true,
	mobileViewToggleLink = '/',
	mobileViewToggleActiveIcon = 'grid',
	showMobilePortfolioList = false,
	portfolioListItems = []
} = Astro.props;

// 現在のURLを取得
const currentUrl = new URL(Astro.url.pathname, Astro.site || Astro.url.origin).toString();

// OG画像のURLを生成（相対パスの場合は絶対URLに変換）
const fullOgImage = ogImage 
	? (ogImage.startsWith('http') ? ogImage : new URL(ogImage.startsWith('/') ? ogImage : `/${ogImage}`, Astro.site || Astro.url.origin).toString())
	: undefined;

// ファビコンのURLを生成（作品ページの場合は作品画像、それ以外はデフォルト）
const faviconUrl = favicon
	? (favicon.startsWith('http') ? favicon : new URL(favicon.startsWith('/') ? favicon : `/${favicon}`, Astro.site || Astro.url.origin).toString())
	: '/favicon.svg';
// ファビコンのMIMEタイプを判定
const faviconType = favicon && favicon.endsWith('.svg') ? 'image/svg+xml' : 'image/webp';

// Portfolio List用のworkNames（City.astro用）
const workNames: string[] = worksData.names;
---

<!doctype html>
<html lang="ja">
	<head>
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-04FR34GR0E"></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'G-04FR34GR0E');
		</script>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, maximum-scale=1.0, viewport-fit=cover" />
		<link rel="icon" type={faviconType} href={faviconUrl} />
		<link rel="apple-touch-icon" href={faviconUrl} />
		<meta name="generator" content={Astro.generator} />
		<!-- Google Search Console 所有権確認 -->
		<meta name="google-site-verification" content="RQfaisHC2R_v40fW83t8vvKtRv7mZlmhqbKvLl" />
		<title>{title}</title>
		
		{/* メタディスクリプション */}
		{description && (
			<meta name="description" content={description} />
		)}
		
		{/* Canonical URL */}
		{canonical && (
			<link rel="canonical" href={currentUrl} />
		)}
		
		{/* Open Graphタグ */}
		<meta property="og:title" content={title} />
		{description && (
			<meta property="og:description" content={description} />
		)}
		{fullOgImage && (
			<>
				{/* HTTPS URLを確実にする */}
				{(() => {
					const secureImageUrl = fullOgImage.startsWith('http://') 
						? fullOgImage.replace('http://', 'https://')
						: fullOgImage;
					return (
						<>
							<meta property="og:image" content={secureImageUrl} />
							<meta property="og:image:url" content={secureImageUrl} />
							<meta property="og:image:secure_url" content={secureImageUrl} />
							<meta property="og:image:type" content="image/webp" />
						</>
					);
				})()}
			</>
		)}
		<meta property="og:url" content={currentUrl} />
		<meta property="og:type" content={ogType} />
		<meta property="og:site_name" content="TaT Archive / 2025 ~ 2026" />
		<meta property="og:locale" content="ja_JP" />
		
		{/* Twitter Cardタグ */}
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		{description && (
			<meta name="twitter:description" content={description} />
		)}
		{fullOgImage && (
			<>
				{(() => {
					const secureImageUrl = fullOgImage.startsWith('http://') 
						? fullOgImage.replace('http://', 'https://')
						: fullOgImage;
					return (
						<>
							<meta name="twitter:image" content={secureImageUrl} />
							<meta name="twitter:image:src" content={secureImageUrl} />
							<meta name="twitter:image:alt" content={title} />
						</>
					);
				})()}
			</>
		)}
		
		<slot name="head" />
	</head>
	<body>
		<!-- Header -->
		<PortfolioHeader
			showNavigation={showNavigation}
			navigationLinks={navigationLinks}
			viewToggleLink={viewToggleLink}
			viewToggleActiveIcon={viewToggleActiveIcon}
			showMobileViewToggle={showMobileViewToggle}
			mobileViewToggleLink={mobileViewToggleLink}
			mobileViewToggleActiveIcon={mobileViewToggleActiveIcon}
			showMobilePortfolioList={showMobilePortfolioList}
			portfolioListItems={portfolioListItems.length > 0 ? portfolioListItems : []}
		/>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
		font-family: sans-serif;
		background-color: #f0f0f0;
		overflow: hidden;
		color: #333;
	}
	
	/* 全体的なスクロールを防止 */
	html {
		overflow: hidden;
	}
</style>
