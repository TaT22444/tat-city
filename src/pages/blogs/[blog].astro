// ブログ詳細ページ - worksと同じ構造
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { blogsData } from '../../data/blogsData.js';
import { Image } from 'astro:assets';

// 静的パス生成
export async function getStaticPaths() {
  const blogs = await getCollection('blogs');
  return blogs.map((blog) => ({
    params: { blog: blog.id.replace(/\.md$/, '') }
  }));
}

// URLパラメータからブログ名を取得
const blogSlug = Astro.params.blog;

// ブログコンテンツの取得
let blogContent = null;
let blogData = null;

try {
  const blogsContent = await getCollection('blogs');
  // item.idはファイル名（拡張子付き、例: Orynth.md）なので、拡張子を除いて比較
  blogContent = blogsContent.find((item) => {
    const idWithoutExt = item.id.replace(/\.md$/, '');
    return idWithoutExt === blogSlug;
  });
  
  if (blogContent) {
    const renderResult = await blogContent.render();
    blogData = {
      title: blogsData.titles[blogSlug as keyof typeof blogsData.titles] || blogContent.data.title || blogSlug || '',
      description: blogsData.descriptions[blogSlug as keyof typeof blogsData.descriptions] || blogContent.data.description || '',
      image: blogsData.images[blogSlug as keyof typeof blogsData.images] || null,
      references: blogsData.references[blogSlug as keyof typeof blogsData.references] || [],
      showToc: blogContent.data.showToc ?? false,
      tocPosition: blogContent.data.tocPosition || 'after-title',
      Content: renderResult.Content
    };
  }
} catch (error) {
  // Content Collectionsが設定されていない場合は無視
}

// ブログが存在しない場合は404
if (!blogSlug || !blogContent) {
  return Astro.redirect('/portfolio');
}

// 画像の取得関数（URL文字列用：ogImageやpreload用）
const getBlogImageSrc = (image: any): string => {
  if (!image) return '';
  if (typeof image === 'object' && 'src' in image) {
    return image.src;
  }
  return typeof image === 'string' ? image : '';
};

// 画像オブジェクト（Imageコンポーネント用）
const rawBlogImage = blogData?.image || null;
// 画像URL文字列（ogImageやpreload用）
const blogImageSrc = getBlogImageSrc(blogData?.image);

// SEO用のデータ準備
const blogTitle = blogData?.title || blogSlug || 'ブログ記事';
const blogDescription = blogData?.description || `${blogTitle}のブログ記事です。`;
const homeUrl = new URL('/', Astro.site || Astro.url.origin).toString();
const blogUrl = new URL(`/blogs/${blogSlug}`, Astro.site || Astro.url.origin).toString();
const portfolioUrl = new URL('/portfolio', Astro.site || Astro.url.origin).toString();

// OG画像の絶対URLを生成
const blogImageFullUrl = blogImageSrc && blogImageSrc.trim() !== ''
  ? (blogImageSrc.startsWith('http') 
      ? blogImageSrc 
      : new URL(
          blogImageSrc.startsWith('/') ? blogImageSrc : `/${blogImageSrc}`,
          Astro.site || Astro.url.origin
        ).toString())
  : undefined;
---

<Layout 
