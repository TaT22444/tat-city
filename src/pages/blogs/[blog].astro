// ブログ詳細ページ - worksと同じ構造
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { blogsData } from '../../data/blogsData.js';
import { Image } from 'astro:assets';

// 静的パス生成
export async function getStaticPaths() {
  const blogs = await getCollection('blogs');
  return blogs.map((blog) => ({
    params: { blog: blog.id.replace(/\.(md|mdx)$/, '') }
  }));
}

// URLパラメータからブログ名を取得
const blogSlug = Astro.params.blog;

// ブログコンテンツの取得
let blogContent = null;
let blogData = null;

try {
  const blogsContent = await getCollection('blogs');
  // item.idはファイル名（拡張子付き、例: Orynth.md または copipe-usage.mdx）なので、拡張子を除いて比較
  blogContent = blogsContent.find((item) => {
    const idWithoutExt = item.id.replace(/\.(md|mdx)$/, '');
    return idWithoutExt === blogSlug;
  });
  
  if (blogContent) {
    const renderResult = await blogContent.render();
    
    // Astroのrender()が返すheadingsを使用（h2, h3のみ）
    // headingsが空の場合は、Markdownのbodyから正規表現で抽出（フォールバック）
    let headings: Array<{ level: number; text: string; id: string }> = [];
    
    if (renderResult.headings && renderResult.headings.length > 0) {
      headings = renderResult.headings
        .filter((h: any) => h.depth === 2 || h.depth === 3)
        .map((h: any) => ({
          level: h.depth,
          text: h.text,
          id: h.slug || h.text.toLowerCase().replace(/[^a-z0-9\u3040-\u309F\u30A0-\u30FF\u4E00-\u9FAF]+/g, '-').replace(/^-|-$/g, '') || `heading-${h.text}`
        }));
    } else {
      // フォールバック: Markdownのbodyから正規表現で抽出
      const body = blogContent.body || '';
      const headingRegex = /^(#{2,3})\s+(.+)$/gm;
      let match;
      let index = 0;
      
      while ((match = headingRegex.exec(body)) !== null) {
        const level = match[1].length;
        const text = match[2].trim();
        const id = text.toLowerCase().replace(/[^a-z0-9\u3040-\u309F\u30A0-\u30FF\u4E00-\u9FAF]+/g, '-').replace(/^-|-$/g, '') || `heading-${index}`;
        headings.push({ level, text, id });
        index++;
      }
    }
    
    blogData = {
      title: blogsData.titles[blogSlug as keyof typeof blogsData.titles] || blogContent.data.title || blogSlug || '',
      description: blogsData.descriptions[blogSlug as keyof typeof blogsData.descriptions] || blogContent.data.description || '',
      image: blogsData.images[blogSlug as keyof typeof blogsData.images] || null,
      ogImage: (blogsData as any).ogImages?.[blogSlug as string] || null,
      references: blogsData.references[blogSlug as keyof typeof blogsData.references] || [],
      publishedDate: (blogsData as any).publishedDates?.[blogSlug as string] || null,
      updatedDate: (blogsData as any).updatedDates?.[blogSlug as string] || null,
      types: (blogsData as any).types?.[blogSlug as string] || [],
      showToc: blogContent.data.showToc ?? false,
      tocPosition: blogContent.data.tocPosition || 'after-title',
      headings: headings,
      Content: renderResult.Content
    };
  }
} catch (error) {
  // Content Collectionsが設定されていない場合は無視
  console.error('Error loading blog content:', error);
}

// ブログが存在しない場合は404
if (!blogSlug || !blogContent) {
  return Astro.redirect('/portfolio');
}

// 画像の取得関数（表示用：Imageコンポーネント用）
const getBlogImageSrc = (image: any): string => {
  if (!image) return '';
  if (typeof image === 'object' && 'src' in image) {
    return image.src;
  }
  return typeof image === 'string' ? image : '';
};

// 画像オブジェクト（Imageコンポーネント用）
const rawBlogImage = blogData?.image || null;
// 表示用画像URL文字列（preload用）
const blogImageSrc = getBlogImageSrc(blogData?.image);

// SEO用のデータ準備
const blogTitle = blogData?.title || blogSlug || 'ブログ記事';
const blogDescription = blogData?.description || `${blogTitle}のブログ記事です。`;
const homeUrl = new URL('/', Astro.site || Astro.url.origin).toString();
const blogUrl = new URL(`/blogs/${blogSlug}`, Astro.site || Astro.url.origin).toString();
const portfolioUrl = new URL('/portfolio', Astro.site || Astro.url.origin).toString();

// OG画像の絶対URLを生成（publicフォルダの画像を使用）
const ogImagePath = blogData?.ogImage || blogImageSrc;
const blogImageFullUrl = ogImagePath && ogImagePath.trim() !== ''
  ? (ogImagePath.startsWith('http') 
      ? ogImagePath 
      : new URL(
          ogImagePath.startsWith('/') ? ogImagePath : `/${ogImagePath}`,
          Astro.site || Astro.url.origin
        ).toString())
  : undefined;
---


<Layout 
  title={`${blogTitle} | TaT Archive / 2025 ~ 2026`}
  description={blogDescription}
  ogImage={blogImageFullUrl}
  ogType="article"
  canonical={true}
  showNavigation={true}
  navigationLinks={[
    { href: '/portfolio#portfolioView', label: 'home' },
    { href: '/portfolio#about', label: 'about' },
    { href: '/portfolio#works', label: 'works' },
    { href: '/portfolio#contact', label: 'contact' }
  ]}
  viewToggleLink="/"
  viewToggleActiveIcon="grid"
  showMobileViewToggle={true}
  mobileViewToggleLink="/"
  mobileViewToggleActiveIcon="3d"
>
  <!-- X埋め込みスクリプト - 遅延読み込み -->
  <script slot="head" defer src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
  
  <!-- ブログ詳細ページのスクリプト（外部ファイル） -->
  <script slot="head" defer src="/scripts/blog-detail.js"></script>
  
  {/* BreadcrumbList構造化データ（JSON-LD） */}
  <script slot="head" type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": homeUrl
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Portfolio",
        "item": portfolioUrl
      },
      {
        "@type": "ListItem",
        "position": 3,
        "name": blogTitle,
        "item": blogUrl
      }
    ]
  })} />
  
  {/* Article構造化データ（JSON-LD） */}
  <script slot="head" type="application/ld+json" set:html={JSON.stringify((() => {
    const schema: any = {
      "@context": "https://schema.org",
      "@type": "Article",
      "headline": blogTitle,
      "description": blogDescription,
      "url": blogUrl,
      "author": {
        "@type": "Person",
        "name": "Tatsuya Aihara"
      },
      "publisher": {
        "@type": "Organization",
        "name": "TaT Archive / 2025 ~ 2026"
      }
    };
    if (blogImageFullUrl) {
      schema.image = blogImageFullUrl;
    }
    return schema;
  })())} />
  
  <div class="blog-detail-page">
    <!-- ブログ詳細コンテンツ -->
    <article class="blog-content">
      <div class="blog-content-container">
        <!-- 戻るボタン（上部に配置） -->
        <nav class="blog-back-links" aria-label="ナビゲーション">
          <a href="/portfolio#blogs" class="back-link">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M10 12L6 8L10 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>ブログ一覧に戻る</span>
          </a>
        </nav>

        <!-- 目次（before-title位置） -->
        {blogData?.showToc && blogData.tocPosition === 'before-title' && blogData.headings && blogData.headings.length > 0 && (
          <nav class="blog-toc" aria-label="目次">
            <div class="blog-toc-header">
              <button class="blog-toc-accordion" aria-label="目次を開閉" aria-expanded="false">
                <svg class="toc-icon-up" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" clip-rule="evenodd" d="M8.00244 5.29688L11.8564 9.14987L11.1494 9.85787L8.00244 6.71087L4.85644 9.85787L4.14844 9.14987L8.00244 5.29688Z" fill="currentColor"/>
                </svg>
                <svg class="toc-icon-down" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" clip-rule="evenodd" d="M8.00244 10.7031L4.14844 6.85013L4.85644 6.14213L8.00244 9.28913L11.1494 6.14213L11.8564 6.85013L8.00244 10.7031Z" fill="currentColor"/>
                </svg>
              </button>
              <p class="blog-toc-title">目次</p>
            </div>
            <ul class="blog-toc-list">
              {blogData.headings.map((heading) => (
                <li class={`toc-item toc-item-h${heading.level}`}>
                  <a href={`#${heading.id}`} class="toc-link">{heading.text}</a>
                </li>
              ))}
            </ul>
          </nav>
        )}

        <!-- タイトル -->
        <div class="blog-header">
          <h1 class="blog-title">{blogTitle}</h1>
          
          <!-- メタ情報 -->
          <dl class="blog-meta">
            {blogData?.publishedDate && (
              <div class="blog-meta-item">
                <dt class="blog-meta-label">公開日</dt>
                <dd class="blog-meta-value">{new Date(blogData.publishedDate).toLocaleDateString('ja-JP', { year: 'numeric', month: 'long', day: 'numeric' })}</dd>
              </div>
            )}
            {blogData?.updatedDate && blogData.updatedDate !== blogData.publishedDate && (
              <div class="blog-meta-item">
                <dt class="blog-meta-label">最終更新日</dt>
                <dd class="blog-meta-value">{new Date(blogData.updatedDate).toLocaleDateString('ja-JP', { year: 'numeric', month: 'long', day: 'numeric' })}</dd>
              </div>
            )}
            {blogData?.types && blogData.types.length > 0 && (
              <div class="blog-meta-item">
                <dt class="blog-meta-label">カテゴリー</dt>
                <dd class="blog-meta-value">{blogData.types.join(' / ')}</dd>
              </div>
            )}
          </dl>
        </div>

        <!-- 目次（after-title位置） -->
        {blogData?.showToc && blogData.tocPosition === 'after-title' && blogData.headings && blogData.headings.length > 0 && (
          <nav class="blog-toc" aria-label="目次">
            <div class="blog-toc-header">
              <button class="blog-toc-accordion" aria-label="目次を開閉" aria-expanded="false">
                <svg class="toc-icon-up" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" clip-rule="evenodd" d="M8.00244 5.29688L11.8564 9.14987L11.1494 9.85787L8.00244 6.71087L4.85644 9.85787L4.14844 9.14987L8.00244 5.29688Z" fill="currentColor"/>
                </svg>
                <svg class="toc-icon-down" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" clip-rule="evenodd" d="M8.00244 10.7031L4.14844 6.85013L4.85644 6.14213L8.00244 9.28913L11.1494 6.14213L11.8564 6.85013L8.00244 10.7031Z" fill="currentColor"/>
                </svg>
              </button>
              <p class="blog-toc-title">目次</p>
            </div>
            <ul class="blog-toc-list">
              {blogData.headings.map((heading) => (
                <li class={`toc-item toc-item-h${heading.level}`}>
                  <a href={`#${heading.id}`} class="toc-link">{heading.text}</a>
                </li>
              ))}
            </ul>
          </nav>
        )}

        <!-- サムネイル画像 -->
        {rawBlogImage && (
          <div class="blog-hero-image-wrapper">
            <Image 
              src={rawBlogImage} 
              alt={`${blogTitle}のサムネイル画像`}
              class="blog-hero-image"
              loading="eager"
              fetchpriority="high"
              width={1200}
              height={675}
              quality={85}
            />
          </div>
        )}

        <!-- 目次（after-image位置） -->
        {blogData?.showToc && blogData.tocPosition === 'after-image' && blogData.headings && blogData.headings.length > 0 && (
          <nav class="blog-toc" aria-label="目次">
            <div class="blog-toc-header">
              <button class="blog-toc-accordion" aria-label="目次を開閉" aria-expanded="false">
                <svg class="toc-icon-up" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" clip-rule="evenodd" d="M8.00244 5.29688L11.8564 9.14987L11.1494 9.85787L8.00244 6.71087L4.85644 9.85787L4.14844 9.14987L8.00244 5.29688Z" fill="currentColor"/>
                </svg>
                <svg class="toc-icon-down" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" clip-rule="evenodd" d="M8.00244 10.7031L4.14844 6.85013L4.85644 6.14213L8.00244 9.28913L11.1494 6.14213L11.8564 6.85013L8.00244 10.7031Z" fill="currentColor"/>
                </svg>
              </button>
              <p class="blog-toc-title">目次</p>
            </div>
            <ul class="blog-toc-list">
              {blogData.headings.map((heading) => (
                <li class={`toc-item toc-item-h${heading.level}`}>
                  <a href={`#${heading.id}`} class="toc-link">{heading.text}</a>
                </li>
              ))}
            </ul>
          </nav>
        )}

        <!-- 目次（before-content位置） -->
        {blogData?.showToc && blogData.tocPosition === 'before-content' && blogData.headings && blogData.headings.length > 0 && (
          <nav class="blog-toc" aria-label="目次">
            <p class="blog-toc-title">目次</p>
            <ul class="blog-toc-list">
              {blogData.headings.map((heading) => (
                <li class={`toc-item toc-item-h${heading.level}`}>
                  <a href={`#${heading.id}`} class="toc-link">{heading.text}</a>
                </li>
              ))}
            </ul>
          </nav>
        )}

        <!-- 目次（before-first-h2位置：JavaScriptで動的に挿入） -->
        {blogData?.showToc && blogData.tocPosition === 'before-first-h2' && blogData.headings && blogData.headings.length > 0 && (
          <nav class="blog-toc blog-toc-before-first-h2" id="blogTocBeforeFirstH2" aria-label="目次" style="display: none;">
            <div class="blog-toc-header">
              <button class="blog-toc-accordion" aria-label="目次を開閉" aria-expanded="false">
                <svg class="toc-icon-up" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" clip-rule="evenodd" d="M8.00244 5.29688L11.8564 9.14987L11.1494 9.85787L8.00244 6.71087L4.85644 9.85787L4.14844 9.14987L8.00244 5.29688Z" fill="currentColor"/>
                </svg>
                <svg class="toc-icon-down" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" clip-rule="evenodd" d="M8.00244 10.7031L4.14844 6.85013L4.85644 6.14213L8.00244 9.28913L11.1494 6.14213L11.8564 6.85013L8.00244 10.7031Z" fill="currentColor"/>
                </svg>
              </button>
              <p class="blog-toc-title">目次</p>
            </div>
            <ul class="blog-toc-list">
              {blogData.headings.map((heading) => (
                <li class={`toc-item toc-item-h${heading.level}`}>
                  <a href={`#${heading.id}`} class="toc-link">{heading.text}</a>
                </li>
              ))}
            </ul>
          </nav>
        )}

        <!-- 本文（Markdownコンテンツ） -->
        {blogData?.Content && (
          <div class="blog-content-body" data-headings={JSON.stringify(blogData.headings || [])}>
            <blogData.Content />
          </div>
        )}
        
        <!-- 引用先・参考リンクセクション -->
        {blogData?.references && blogData.references.length > 0 && (
          <div class="blog-references-section">
            <h2 class="blog-references-title">参考リンク</h2>
            <ul class="blog-references-list">
              {blogData.references.map((ref) => (
                <li class="blog-reference-item">
                  <a 
                    href={ref.url} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="blog-reference-link"
                  >
                    {ref.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        )}
        
        <!-- X埋め込みスクリプト（headセクションに移動して確実に読み込む） -->

        <!-- シェアボタン -->
        <div class="blog-share-section">
          <p class="blog-share-title">シェアしてあげる</p>
          <div class="blog-share-buttons">
            <a 
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent((() => {
                // ブログタイトルと説明文を含めたツイート文を作成
                const tweetText = `「${blogTitle}」\n${blogDescription}`;
                // Xのツイート文字数制限（280文字）を考慮して、URL分（約23文字）を除いた240文字以内に調整
                const maxLength = 240;
                if (tweetText.length > maxLength) {
                  return tweetText.substring(0, maxLength - 3) + '...';
                }
                return tweetText;
              })())}&url=${encodeURIComponent(blogUrl)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="share-button share-button-twitter"
              aria-label="X（Twitter）でシェア"
            >
              <svg width="20" height="20" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12.6009 0.730469H15.0544L9.69434 6.95147L16 15.2695H11.0629L7.19566 10.0035L2.77087 15.2695H0.31595L6.04904 8.61747L0 0.730469H5.06262L8.55811 5.55903L12.6009 0.730469ZM11.7399 13.7705H13.0993L4.32392 2.13447H2.86506L11.7399 13.7705Z" fill="currentColor"/>
              </svg>
              <span>Xでシェア</span>
            </a>
            <button 
              class="share-button share-button-copy"
              aria-label="リンクをコピー"
              id="copyLinkButton"
            >
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M13.333 1.667H6.667c-1.833 0-3.334 1.5-3.334 3.333v10c0 1.833 1.5 3.333 3.334 3.333h6.666c1.833 0 3.334-1.5 3.334-3.333V5c0-1.833-1.5-3.333-3.334-3.333z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M13.333 1.667v3.333h3.334" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>リンクをコピー</span>
            </button>
          </div>
        </div>
      </div>
    </article>
  </div>
</Layout>

<style is:global>
  html, body {
    overflow: visible !important;
    overflow-x: hidden;
    scroll-behavior: smooth;
    height: auto !important;
  }
</style>

<style>
  /* ========================================
     CSS Variables & Base（works/[work].astroと同じ）
     ======================================== */
  :root {
    --font-primary: 'Hiragino Kaku Gothic Pro', 'Hiragino Sans', sans-serif;
    --color-white: #ffffff;
    --color-black: #191919;
    --color-text-primary: #343434;
    --color-text-secondary: #808080;
    --color-text-tertiary: #707070;
    --color-border: #c6c6c6;
    --color-border-light: #e2e2e2;
    --color-background-gray: #fafafa;
    --color-badge-green: #20b946;
    --spacing-unit: 8px;
  }

  .blog-detail-page {
    width: 100%;
    min-height: 100vh;
    background-color: var(--color-white);
    font-family: var(--font-primary);
    color: var(--color-text-primary);
    line-height: 1.6;
  }

  /* ========================================
     ブログ情報セクション
     ======================================== */
  .blog-content {
    width: 100%;
    padding: 100px 0 120px;
  }

  .blog-content-container {
    max-width: 780px;
    margin: 0 auto;
    padding: 0 108px;
  }

  /* 戻るボタン */
  .blog-back-links {
    margin-bottom: 32px;
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    padding: 8px 12px;
    border-radius: 12px;
    background-color: var(--color-background-gray);
    border: 1px solid var(--color-border-light);
    gap: 8px;
    font-size: 10px;
    font-weight: 500;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .back-link:hover {
    opacity: 0.7;
  }

  .back-link svg {
    width: 16px;
    height: 16px;
  }

  /* タイトルセクション */
  .blog-header {
    margin-bottom: 40px;
    padding-bottom: 16px;
    border-bottom: 1px solid #ededed;
  }

  .blog-title {
    font-size: 28px;
    font-weight: 600;
    color: var(--color-text-primary);
    margin: 0 0 16px 0;
    line-height: 1.4;
    letter-spacing: 0.01em;
  }

  /* メタ情報 */
  .blog-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 24px 32px;
    margin: 0;
    padding: 0;
  }

  .blog-meta-item {
    display: flex;
    align-items: center;
    gap: 4px;
    margin: 0;
  }

  .blog-meta-label {
    font-size: 10px;
    font-weight: 500;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0;
  }

  .blog-meta-label::after {
    content: ':';
    margin-left: 0;
  }

  .blog-meta-value {
    font-size: 10px;
    font-weight: 500;
    color: var(--color-text-primary);
    margin: 0;
  }

  /* サムネイル画像（Hero画像） */
  .blog-hero-image-wrapper {
    width: 100%;
    margin: 40px 0;
    text-align: center;
  }

  .blog-hero-image {
    width: 100%;
    height: auto;
    object-fit: contain;
    display: block;
    margin: 0 auto;
    border-radius: 12px;
    box-shadow: 0 0 32px rgba(0, 0, 0, 0.08);
  }

