// 作品詳細ページ - ブログ風デザイン
import Layout from '../../layouts/Layout.astro';
import { worksData } from '../../data/worksData.js';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

// URLパラメータから作品名を取得
const workName = Astro.params.work;

// 作品データの取得
const workData = {
  name: workName || '',
  description: worksData.descriptions[workName as keyof typeof worksData.descriptions] || '',
  types: worksData.types[workName as keyof typeof worksData.types] || [],
  scope: worksData.scopes[workName as keyof typeof worksData.scopes] || '',
  duration: worksData.durations[workName as keyof typeof worksData.durations] || '',
  image: worksData.images[workName as keyof typeof worksData.images] || null,
  released: worksData.released[workName as keyof typeof worksData.released] || false,
  releaseLinks: worksData.releaseLinks[workName as keyof typeof worksData.releaseLinks] || []
};

// Markdownコンテンツの取得（存在する場合）
let Content = null;
try {
  const worksContent = await getCollection('works');
  // item.idはファイル名（拡張子付き、例: Hamori.md）なので、拡張子を除いて比較
  const workContent = worksContent.find((item) => {
    const idWithoutExt = item.id.replace(/\.md$/, '');
    return idWithoutExt === workName;
  });
  
  if (workContent) {
    const renderResult = await workContent.render();
    Content = renderResult.Content;
  }
} catch (error) {
  // Content Collectionsが設定されていない場合は無視
}

// 画像の取得関数（URL文字列用：ogImageやpreload用）
const getWorkImageSrc = (image: any): string => {
  if (!image) return '';
  if (typeof image === 'object' && 'src' in image) {
    return image.src;
  }
  return typeof image === 'string' ? image : '';
};

// 画像オブジェクト（Imageコンポーネント用）
const rawWorkImage = workData.image;
// 画像URL文字列（ogImageやpreload用）
const workImageSrc = getWorkImageSrc(workData.image);

// 作品が存在しない場合は404
if (!workName || !worksData.names.includes(workName)) {
  return Astro.redirect('/portfolio');
}

// SEO用のデータ準備
const workDescription = workData.description || `${workData.name}のポートフォリオページです。`;
const homeUrl = new URL('/', Astro.site || Astro.url.origin).toString();
const workUrl = new URL(`/works/${workName}`, Astro.site || Astro.url.origin).toString();
const portfolioUrl = new URL('/portfolio', Astro.site || Astro.url.origin).toString();
// OG画像の絶対URLを生成（Astro.siteが設定されている場合はそれを使用）
// 作品画像が相対パス（/_astro/...など）の場合も絶対URLに変換
const workImageFullUrl = workImageSrc 
  ? (workImageSrc.startsWith('http') 
      ? workImageSrc 
      : new URL(
          workImageSrc.startsWith('/') ? workImageSrc : `/${workImageSrc}`,
          Astro.site || Astro.url.origin
        ).toString())
  : undefined;

// City.astroから来たかどうかを判定（URLクエリパラメータから）
const fromCity = Astro.url.searchParams.get('from') === 'city';

// 静的パス生成
export async function getStaticPaths() {
  return worksData.names.map((name) => ({
    params: { work: name }
  }));
}
---

<Layout 
  title={`${workData.name} | TaT Archive / 2025 ~ 2026`}
  description={workDescription}
  ogImage={workImageFullUrl || workImageSrc}
  ogType="article"
  canonical={true}
  showNavigation={true}
  navigationLinks={[
    { href: '/portfolio#portfolioView', label: 'home' },
    { href: '/portfolio#about', label: 'about' },
    { href: '/portfolio#works', label: 'works' },
    { href: '/portfolio#contact', label: 'contact' }
  ]}
  viewToggleLink="/"
  viewToggleActiveIcon="grid"
  showMobileViewToggle={true}
  mobileViewToggleLink="/"
  mobileViewToggleActiveIcon="3d"
>
  {workImageSrc && (
    <link slot="head" rel="preload" as="image" href={workImageSrc} fetchpriority="high" />
  )}
  
  {/* BreadcrumbList構造化データ（JSON-LD） */}
  <script slot="head" type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": homeUrl
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Portfolio",
        "item": portfolioUrl
      },
      {
        "@type": "ListItem",
        "position": 3,
        "name": workData.name,
        "item": workUrl
      }
    ]
  })} />
  
  {/* CreativeWork構造化データ（JSON-LD） */}
  <script slot="head" type="application/ld+json" set:html={JSON.stringify((() => {
    const schema: any = {
      "@context": "https://schema.org",
      "@type": "CreativeWork",
      "name": workData.name,
      "description": workDescription,
      "url": workUrl,
      "creator": {
        "@type": "Person",
        "name": "Tatsuya Aihara"
      }
    };
    if (workImageFullUrl) {
      schema.image = workImageFullUrl;
    }
    if (workData.types && workData.types.length > 0) {
      schema.keywords = workData.types.join(', ');
      schema.genre = workData.types[0];
      // より具体的な作品タイプを指定
      if (workData.types.includes('iOSアプリ')) {
        schema.applicationCategory = "MobileApplication";
        schema.operatingSystem = "iOS";
      } else if (workData.types.includes('アプリデザイン') || workData.types.includes('UI/UX')) {
        schema.creativeWorkStatus = "Published";
      }
    }
    // 制作範囲の情報
    if (workData.scope) {
      schema.creditText = workData.scope;
    }
    // 制作期間の情報（期間として記録）
    if (workData.duration) {
      schema.timeRequired = workData.duration;
    }
    return schema;
  })())} />
  
  <div class="work-detail-page">

    <!-- 作品詳細コンテンツ（統合されたコンテナ） -->
    <article class="work-content">
      <div class="work-content-container">
        <!-- 戻るボタン（上部に配置） -->
        <nav class="work-back-links" aria-label="ナビゲーション">
          <a href="/" class="back-link back-link-city" id="cityBackLink" style="display: none;">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M10 12L6 8L10 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>3Dビューに戻る</span>
          </a>
          <a href="/portfolio#works" class="back-link">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M10 12L6 8L10 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>作品一覧に戻る</span>
          </a>
        </nav>

        <!-- タイトルとCTA（リリースリンク） -->
        <div class="work-header">
          <div class="work-title-section">
            <h1 class="work-title">{workData.name}</h1>
            {workData.releaseLinks.length > 0 && (
              <div class="work-cta-buttons">
                {workData.releaseLinks.map((link) => (
                  <a 
                    href={link.url} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="work-cta-button"
                  >
                    {link.label}
                    <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M6 4L12 4V10M12 4L4 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </a>
                ))}
              </div>
            )}
          </div>
          
          <!-- メタ情報 -->
          <dl class="work-meta">
            {workData.types.length > 0 && (
              <div class="work-meta-item">
                <dt class="work-meta-label">タイプ</dt>
                <dd class="work-meta-value">{workData.types.join(' / ')}</dd>
              </div>
            )}
            {workData.scope && (
              <div class="work-meta-item">
                <dt class="work-meta-label">制作範囲</dt>
                <dd class="work-meta-value">{workData.scope}</dd>
              </div>
            )}
            {workData.duration && (
              <div class="work-meta-item">
                <dt class="work-meta-label">制作期間</dt>
                <dd class="work-meta-value">{workData.duration}</dd>
              </div>
            )}
            {workData.released && (
              <div class="work-meta-item">
                <dt class="work-meta-label">ステータス</dt>
                <dd class="work-meta-value work-status-released">リリース済み</dd>
              </div>
            )}
          </dl>
        </div>

        <!-- Hero画像（コンテンツ内に統合） -->
        {rawWorkImage && (
          <div class="work-hero-image-wrapper">
            <Image 
              src={rawWorkImage} 
              alt={`${workData.name}のプレビュー画像`}
              class="work-hero-image"
              loading="eager"
              fetchpriority="high"
            />
          </div>
        )}

        <!-- 本文（Markdownコンテンツまたは説明文） -->
        {Content ? (
          <div class="work-content-body">
            <Content />
          </div>
        ) : workData.description && (
          <div class="work-description">
            <p>aaa</p>
          </div>
        )}
      </div>
    </article>
  </div>
</Layout>

<script is:inline>
  // URLクエリパラメータをチェックして、City.astroから来た場合は「3Dビューに戻る」ボタンを表示
  (function() {
    const urlParams = new URLSearchParams(window.location.search);
    const fromCity = urlParams.get('from') === 'city';
    
    if (fromCity) {
      // DOMContentLoadedを待たずに即座に実行（インラインスクリプトの場合）
      const checkAndShow = () => {
        const cityBackLink = document.getElementById('cityBackLink');
        if (cityBackLink) {
          cityBackLink.style.display = 'inline-flex';
        }
      };
      
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', checkAndShow);
      } else {
        checkAndShow();
      }
    }
  })();
</script>

