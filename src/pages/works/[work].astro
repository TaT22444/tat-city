---
// 作品詳細ページ - ブログ風デザイン
import Layout from '../../layouts/Layout.astro';
import { worksData } from '../../data/worksData.js';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

// URLパラメータから作品名を取得
const workName = Astro.params.work;

// 作品データの取得
const workData = {
  name: workName || '',
  description: worksData.descriptions[workName as keyof typeof worksData.descriptions] || '',
  types: worksData.types[workName as keyof typeof worksData.types] || [],
  scope: worksData.scopes[workName as keyof typeof worksData.scopes] || '',
  duration: worksData.durations[workName as keyof typeof worksData.durations] || '',
  image: worksData.images[workName as keyof typeof worksData.images] || null,
  released: worksData.released[workName as keyof typeof worksData.released] || false,
  releaseLinks: worksData.releaseLinks[workName as keyof typeof worksData.releaseLinks] || []
};

// Markdownコンテンツの取得（存在する場合）
let Content = null;
let workMarkdownTitle: string | undefined = undefined;
// 作品の目次設定を取得（初期値）
let workTocSettings: {
  showToc: boolean;
  tocPosition: 'before-title' | 'after-title' | 'after-image' | 'before-content';
} = {
  showToc: false,
  tocPosition: 'after-title'
};

try {
  const worksContent = await getCollection('works');
  // item.idはファイル名（拡張子付き、例: Hamori.md）なので、拡張子を除いて比較
  const workContent = worksContent.find((item) => {
    const idWithoutExt = item.id.replace(/\.md$/, '');
    return idWithoutExt === workName;
  });
  
  if (workContent) {
    const renderResult = await workContent.render();
    Content = renderResult.Content;
    workMarkdownTitle = workContent.data.title;
    // 目次設定を更新
    workTocSettings = {
      showToc: workContent.data.showToc ?? false,
      tocPosition: (workContent.data.tocPosition || 'after-title') as 'before-title' | 'after-title' | 'after-image' | 'before-content'
    };
  }
} catch (error) {
  // Content Collectionsが設定されていない場合は無視
}

// 画像の取得関数（URL文字列用：ogImageやpreload用）
const getWorkImageSrc = (image: any): string => {
  if (!image) return '';
  if (typeof image === 'object' && 'src' in image) {
    return image.src;
  }
  return typeof image === 'string' ? image : '';
};

// 画像オブジェクト（Imageコンポーネント用）
const rawWorkImage = workData.image;
// 画像URL文字列（ogImageやpreload用）
const workImageSrc = getWorkImageSrc(workData.image);

// 作品が存在しない場合は404
if (!workName || !worksData.names.includes(workName)) {
  return Astro.redirect('/portfolio');
}

// SEO用のデータ準備
const workTitle = workMarkdownTitle || workData.name;
const workDescription = workData.description || `${workTitle}のポートフォリオページです。`;
const homeUrl = new URL('/', Astro.site || Astro.url.origin).toString();
const workUrl = new URL(`/works/${workName}`, Astro.site || Astro.url.origin).toString();
const portfolioUrl = new URL('/portfolio', Astro.site || Astro.url.origin).toString();
// OG画像の絶対URLを生成（Astro.siteが設定されている場合はそれを使用）
// 作品画像が相対パス（/_astro/...など）の場合も絶対URLに変換
const workImageFullUrl = workImageSrc && workImageSrc.trim() !== ''
  ? (workImageSrc.startsWith('http') 
      ? workImageSrc 
      : new URL(
          workImageSrc.startsWith('/') ? workImageSrc : `/${workImageSrc}`,
          Astro.site || Astro.url.origin
        ).toString())
  : undefined;

// City.astroから来たかどうかを判定（URLクエリパラメータから）
const fromCity = Astro.url.searchParams.get('from') === 'city';

// 静的パス生成
export async function getStaticPaths() {
  return worksData.names.map((name) => ({
    params: { work: name }
  }));
}
---

<Layout 
  title={`${workTitle} | TaT Archive / 2025 ~ 2026`}
  description={workDescription}
  ogImage={workImageFullUrl || (workImageSrc && workImageSrc.trim() !== '' ? workImageSrc : undefined)}
  ogType="article"
  canonical={true}
  showNavigation={true}
  navigationLinks={[
    { href: '/portfolio#portfolioView', label: 'home' },
    { href: '/portfolio#about', label: 'about' },
    { href: '/portfolio#works', label: 'works' },
    { href: '/portfolio#contact', label: 'contact' }
  ]}
  viewToggleLink="/"
  viewToggleActiveIcon="grid"
  showMobileViewToggle={true}
  mobileViewToggleLink="/"
  mobileViewToggleActiveIcon="3d"
>
  <!-- 外部スクリプト（遅延読み込み） -->
  <script slot="head" defer src="/scripts/work-detail.js"></script>
  
  {/* BreadcrumbList構造化データ（JSON-LD） */}
  <script slot="head" type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": homeUrl
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Portfolio",
        "item": portfolioUrl
      },
      {
        "@type": "ListItem",
        "position": 3,
        "name": workTitle,
        "item": workUrl
      }
    ]
  })} />
  
  {/* CreativeWork構造化データ（JSON-LD） */}
  <script slot="head" type="application/ld+json" set:html={JSON.stringify((() => {
    const schema: any = {
      "@context": "https://schema.org",
      "@type": "CreativeWork",
      "name": workTitle,
      "description": workDescription,
      "url": workUrl,
      "creator": {
        "@type": "Person",
        "name": "Tatsuya Aihara"
      }
    };
    if (workImageFullUrl) {
      schema.image = workImageFullUrl;
    }
    if (workData.types && workData.types.length > 0) {
      schema.keywords = workData.types.join(', ');
      schema.genre = workData.types[0];
      // より具体的な作品タイプを指定
      if (workData.types.includes('iOSアプリ')) {
        schema.applicationCategory = "MobileApplication";
        schema.operatingSystem = "iOS";
      } else if (workData.types.includes('アプリデザイン') || workData.types.includes('UI/UX')) {
        schema.creativeWorkStatus = "Published";
      }
    }
    // 制作範囲の情報
    if (workData.scope) {
      schema.creditText = workData.scope;
    }
    // 制作期間の情報（期間として記録）
    if (workData.duration) {
      schema.timeRequired = workData.duration;
    }
    return schema;
  })())} />
  
  <div class="work-detail-page">

    <!-- 作品詳細コンテンツ（統合されたコンテナ） -->
    <article class="work-content">
      <div class="work-content-container">
        <!-- 戻るボタン（上部に配置） -->
        <nav class="work-back-links" aria-label="ナビゲーション">
          <a href="/" class="back-link back-link-city" id="cityBackLink" style="display: none;">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M10 12L6 8L10 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>3Dビューに戻る</span>
          </a>
          <a href="/portfolio#works" class="back-link">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M10 12L6 8L10 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>作品一覧に戻る</span>
          </a>
        </nav>

        <!-- タイトルとCTA（リリースリンク） -->
        <div class="work-header">
          <div class="work-title-section">
            <h1 class="work-title">{workTitle}</h1>
            {workData.releaseLinks.length > 0 && (
              <div class="work-cta-buttons">
                {workData.releaseLinks.map((link) => (
                  <a 
                    href={link.url} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="work-cta-button"
                  >
                    {link.label}
                    <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M6 4L12 4V10M12 4L4 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </a>
                ))}
              </div>
            )}
          </div>
          
          <!-- メタ情報 -->
          <dl class="work-meta">
            {workData.types.length > 0 && (
              <div class="work-meta-item">
                <dt class="work-meta-label">タイプ</dt>
                <dd class="work-meta-value">{workData.types.join(' / ')}</dd>
              </div>
            )}
            {workData.scope && (
              <div class="work-meta-item">
                <dt class="work-meta-label">制作範囲</dt>
                <dd class="work-meta-value">{workData.scope}</dd>
              </div>
            )}
            {workData.duration && (
              <div class="work-meta-item">
                <dt class="work-meta-label">制作期間</dt>
                <dd class="work-meta-value">{workData.duration}</dd>
              </div>
            )}
            {workData.released && (
              <div class="work-meta-item">
                <dt class="work-meta-label">ステータス</dt>
                <dd class="work-meta-value work-status-released">リリース済み</dd>
              </div>
            )}
          </dl>
        </div>

        <!-- 目次（before-title位置） -->
        {workTocSettings.showToc && workTocSettings.tocPosition === 'before-title' && (
          <nav class="work-toc" id="workToc" aria-label="目次">
            <h2 class="work-toc-title">目次</h2>
            <ul class="work-toc-list" id="workTocList"></ul>
          </nav>
        )}

        <!-- 目次（after-title位置） -->
        {workTocSettings.showToc && workTocSettings.tocPosition === 'after-title' && (
          <nav class="work-toc" id="workToc" aria-label="目次">
            <h2 class="work-toc-title">目次</h2>
            <ul class="work-toc-list" id="workTocList"></ul>
          </nav>
        )}

        <!-- Hero画像（コンテンツ内に統合） -->
        {rawWorkImage && (
          <div class="work-hero-image-wrapper">
            <Image 
              src={rawWorkImage} 
              alt={`${workTitle}のプレビュー画像`}
              class="work-hero-image"
              loading="eager"
              fetchpriority="high"
              width={1200}
              height={675}
              quality={85}
            />
          </div>
        )}

        <!-- 目次（after-image位置） -->
        {workTocSettings.showToc && workTocSettings.tocPosition === 'after-image' && (
          <nav class="work-toc" id="workToc" aria-label="目次">
            <h2 class="work-toc-title">目次</h2>
            <ul class="work-toc-list" id="workTocList"></ul>
          </nav>
        )}

        <!-- 目次（before-content位置） -->
        {workTocSettings.showToc && workTocSettings.tocPosition === 'before-content' && (
          <nav class="work-toc" id="workToc" aria-label="目次">
            <h2 class="work-toc-title">目次</h2>
            <ul class="work-toc-list" id="workTocList"></ul>
          </nav>
        )}

        <!-- 本文（Markdownコンテンツまたは説明文） -->
        {Content ? (
          <div class="work-content-body">
            <Content />
          </div>
        ) : workData.description && (
          <div class="work-description">
            <p>aaa</p>
          </div>
        )}

        <!-- シェアボタン -->
        <div class="work-share-section">
          <p class="work-share-title">シェアしてあげる</p>
          <div class="work-share-buttons">
            <a 
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent((() => {
                // 作品名と説明文を含めたツイート文を作成
                const tweetText = `${"「" + workTitle + "」"}\n${workDescription}`;
                // Xのツイート文字数制限（280文字）を考慮して、URL分（約23文字）を除いた257文字以内に調整
                const maxLength = 240;
                if (tweetText.length > maxLength) {
                  return tweetText.substring(0, maxLength - 3) + '...';
                }
                return tweetText;
              })())}&url=${encodeURIComponent(workUrl)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="share-button share-button-twitter"
              aria-label="X（Twitter）でシェア"
            >
              <svg width="20" height="20" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12.6009 0.730469H15.0544L9.69434 6.95147L16 15.2695H11.0629L7.19566 10.0035L2.77087 15.2695H0.31595L6.04904 8.61747L0 0.730469H5.06262L8.55811 5.55903L12.6009 0.730469ZM11.7399 13.7705H13.0993L4.32392 2.13447H2.86506L11.7399 13.7705Z" fill="currentColor"/>
              </svg>
              <span>Xでシェア</span>
            </a>
            <button 
              class="share-button share-button-copy"
              aria-label="リンクをコピー"
              id="copyLinkButton"
            >
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M13.333 1.667H6.667c-1.833 0-3.334 1.5-3.334 3.333v10c0 1.833 1.5 3.333 3.334 3.333h6.666c1.833 0 3.334-1.5 3.334-3.333V5c0-1.833-1.5-3.333-3.334-3.333z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M13.333 1.667v3.333h3.334" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>リンクをコピー</span>
            </button>
          </div>
        </div>
      </div>
    </article>
  </div>
</Layout>

<style is:global>
  html, body {
    overflow: visible !important;
    overflow-x: hidden;
    scroll-behavior: smooth;
    height: auto !important;
  }
</style>

<style>
  /* ========================================
     CSS Variables & Base（PortfolioViewと同じ）
     ======================================== */
  :root {
    --font-primary: 'Hiragino Kaku Gothic Pro', 'Hiragino Sans', sans-serif;
    --color-white: #ffffff;
    --color-black: #191919;
    --color-text-primary: #343434;
    --color-text-secondary: #808080;
    --color-text-tertiary: #707070;
    --color-border: #c6c6c6;
    --color-border-light: #e2e2e2;
    --color-background-gray: #fafafa;
    --color-badge-green: #20b946;
    --spacing-unit: 8px;
  }

  .work-detail-page {
    width: 100%;
    min-height: 100vh;
    background-color: var(--color-white);
    font-family: var(--font-primary);
    color: var(--color-text-primary);
    line-height: 1.6;
  }

  /* ========================================
     作品情報セクション（統合されたコンテナ）
     ======================================== */
  .work-content {
    width: 100%;
    padding: 100px 0 120px;
  }

  .work-content-container {
    max-width: 780px;
    margin: 0 auto;
    padding: 0 108px;
  }

  /* 戻るボタン（上部に配置） */
  .work-back-links {
    margin-bottom: 32px;
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    padding: 8px 12px;
    border-radius: 12px;
    background-color: var(--color-background-gray);
    border: 1px solid var(--color-border-light);
    gap: 8px;
    font-size: 10px;
    font-weight: 500;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .back-link:hover {
    opacity: 0.7;
  }

  .back-link svg {
    width: 16px;
    height: 16px;
  }

  /* タイトルセクション（タイトルとCTA） */
  .work-title-section {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 16px;
  }

  .work-title {
    font-size: 32px;
    font-weight: 600;
    color: var(--color-text-primary);
    margin: 0;
    line-height: 1.4;
    letter-spacing: 0.01em;
  }

  /* CTAボタン（リリースリンク） */
  .work-cta-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
  }

  .work-cta-button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 20px;
    background-color: var(--color-black);
    color: var(--color-white);
    font-size: 12px;
    line-height: 1;
    font-weight: 500;
    text-decoration: none;
    border-radius: 12px;
    transition: all 0.2s ease;
  }

  .work-cta-button:hover {
    background-color: #333;
    transform: translateY(-1px);
    box-shadow: 0 0 12px rgba(0, 0, 0, 0.15);
  }

  .work-cta-button svg {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }

  /* タイトルとメタ情報 */
  .work-header {
    margin-bottom: 24px;
    padding-bottom: 16px;
    border-bottom: 1px solid #ededed;
  }

  .work-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 24px 32px;
    margin: 0;
    padding: 0;
  }

  .work-meta-item {
    display: flex;
    align-items: center;
    gap: 4px;
    margin: 0;
  }

  .work-meta-label {
    font-size: 10px;
    font-weight: 500;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0;
  }

  .work-meta-label::after {
    content: ':';
    margin-left: 0;
  }

  .work-meta-value {
    font-size: 10px;
    font-weight: 500;
    color: var(--color-text-primary);
    margin: 0;
  }

  .work-status-released {
    color: var(--color-badge-green);
  }

  /* 説明文 */
  .work-description {
    margin-bottom: 40px;
  }

  .work-description p {
    font-size: 14px;
    font-weight: 500;
    line-height: 2;
    color: var(--color-text-primary);
    margin: 0 0 1em;
  }

  .work-description p:last-child {
    margin-bottom: 0;
  }

  /* Markdownコンテンツ（本文） */
  .work-content-body {
    margin: 64px 0;
    max-width: 100%;
  }

  /* 見出しのスタイル */
  .work-content-body :global(h1),
  .work-content-body :global(h2),
  .work-content-body :global(h3),
  .work-content-body :global(h4),
  .work-content-body :global(h5),
  .work-content-body :global(h6) {
    font-weight: 600;
    color: var(--color-text-primary);
    line-height: 1.4;
    letter-spacing: 0.01em;
    margin: 0;
  }

  .work-content-body :global(h1) {
    font-size: 24px;
    margin-top: 2.5em;
    margin-bottom: 1em;
  }

  .work-content-body :global(h1:first-child) {
    margin-top: 0;
  }

  .work-content-body :global(h2) {
    font-size: 20px;
    margin-top: 2.5em;
    margin-bottom: 1em;
    padding-bottom: 0.5em;
    border-bottom: 1px solid var(--color-border-light);
  }

  .work-content-body :global(h2:first-child) {
    margin-top: 0;
  }

  .work-content-body :global(h3) {
    font-size: 16px;
    margin-top: 2em;
    margin-bottom: 0.75em;
  }

  .work-content-body :global(h4) {
    font-size: 16px;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
  }

  .work-content-body :global(h5) {
    font-size: 16px;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
  }

  .work-content-body :global(h6) {
    font-size: 14px;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
  }

  /* 段落のスタイル */
  .work-content-body :global(p) {
    font-size: 14px;
    font-weight: 500;
    line-height: 2;
    color: var(--color-text-primary);
    margin: 0 0 1.5em;
  }

  .work-content-body :global(p:last-child) {
    margin-bottom: 0;
  }

  /* リストのスタイル */
  .work-content-body :global(ul),
  .work-content-body :global(ol) {
    font-size: 14px;
    font-weight: 500;
    line-height: 2;
    color: var(--color-text-primary);
    margin: 0 0 1.5em;
    padding-left: 1.75em;
  }

  .work-content-body :global(li) {
    margin-bottom: 0.75em;
  }

  .work-content-body :global(li:last-child) {
    margin-bottom: 0;
  }

  .work-content-body :global(ul:last-child),
  .work-content-body :global(ol:last-child) {
    margin-bottom: 0;
  }

  /* ネストされたリスト */
  .work-content-body :global(ul ul),
  .work-content-body :global(ol ol),
  .work-content-body :global(ul ol),
  .work-content-body :global(ol ul) {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
  }

  /* リンクのスタイル */
  .work-content-body :global(a) {
    color: var(--color-text-primary);
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: opacity 0.2s ease;
  }

  .work-content-body :global(a:hover) {
    opacity: 0.7;
  }

  /* 画像のスタイル */
  .work-content-body :global(img) {
    width: 100%;
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 2.5em 0;
    box-shadow: 0 0 32px rgba(0, 0, 0, 0.08);
    display: block;
  }

  /* 引用のスタイル */
  .work-content-body :global(blockquote) {
    border-left: 3px solid var(--color-border);
    padding-left: 1.5em;
    margin: 2em 0;
    font-style: italic;
    color: var(--color-text-secondary);
    font-size: 14px;
    line-height: 2;
  }

  .work-content-body :global(blockquote p) {
    margin-bottom: 0.75em;
  }

  .work-content-body :global(blockquote p:last-child) {
    margin-bottom: 0;
  }

  /* コードのスタイル */
  .work-content-body :global(code) {
    background-color: var(--color-background-gray);
    padding: 0.15em 0.4em;
    border-radius: 4px;
